{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es6", "dom", "es2017"],
    "target": "es5",
    "jsx": "react",
    "jsxFactory": "h",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "declaration": false,
    "noImplicitAny": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.ts",
    "typings/**/*d.ts"
  ],
  "exclude": ["node_modules"]
}
